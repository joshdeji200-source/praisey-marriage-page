<script>
const yesBtn = document.getElementById("yes");
const maybeBtn = document.getElementById("maybe");
const noBtn = document.getElementById("no");
const thumbBtn = document.getElementById("thumb");

let yesScale = 1;

// NO button flashes red
noBtn.onclick = () => {
  yesScale += 0.5;
  yesBtn.style.transform = `scale(${yesScale})`;

  const originalBG = document.body.style.background;
  document.body.style.background = "red";
  setTimeout(()=>{ document.body.style.background = originalBG; },500);
};

// MAYBE disappears
maybeBtn.onclick = () => maybeBtn.style.display = "none";

// YES button goes to thumbprint page
yesBtn.onclick = () => {
  document.getElementById("page1").classList.add("hidden");
  document.getElementById("page2").classList.remove("hidden");
};

// Thumbprint button goes to final page
thumbBtn.onclick = () => {
  document.getElementById("page2").classList.add("hidden");
  document.getElementById("page3").classList.remove("hidden");
};
</script>
